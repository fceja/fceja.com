node {

    def envJenkinsfilePath
    echo "env - ${env.BRANCH_NAME.toString()}"

    if (env.BRANCH_NAME.equals('local')) {
        echo "entered local"
        envJenkinsfilePath = "${env.ENV_JENKINSFILE_PATH}/local.Jenkinsfile"

    } else if (env.BRANCH_NAME.equals('dev')) {
        echo "entered dev"
        envJenkinsfilePath = "${env.ENV_JENKINSFILE_PATH}/dev.Jenkinsfile"

    } else if (env.BRANCH_NAME.equals('stage')) {
        envJenkinsfilePath = "${env.ENV_JENKINSFILE_PATH}/stage.Jenkinsfile"

    } else if (env.BRANCH_NAME.equals('prod')) {
        envJenkinsfilePath = "${env.ENV_JENKINSFILE_PATH}/prod.Jenkinsfile"

    } else {
        echo "Branch environment does not exist"
        return
    }

    echo "load envJenkinsfilePath - ${envJenkinsfilePath}"
    load envJenkinsfilePath
    echo "done loading"

}
